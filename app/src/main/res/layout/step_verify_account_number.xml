<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Your Account Number"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/account_number_textview"
        android:layout_marginStart="15dp"
        android:layout_marginTop="123dp"
        android:id="@+id/account_number_to_verify" />

    <TextView
        android:text="Please enter your account Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:id="@+id/account_number_textview"
        android:layout_alignBaseline="@+id/account_number_to_verify"
        android:layout_alignBottom="@+id/account_number_to_verify"
        android:layout_alignParentStart="true" />
</RelativeLayout>